<div class="headline">
<div class="container">
<h1>Log in</h1>
<%#  Removed login capabilities for outside users
<p>Don't have an account? <%= link_to "Sign up!", signup_path %><!--</p>-->

<%= form_tag sessions_path, :class => 'login' do %>
  <dl>
    <dt><%= label_tag :login, "Andrew ID" %></dt>
    <dd><%= text_field_tag :login, params[:login] %></dd>
    <dt><%= label_tag :password %></dt>
    <dd><%= password_field_tag :password %></dd>
  </dl>
  <%= submit_tag "Log in" %>
<% end %>
</div>
</div>
