<% title "Apps" %>

<table>
  <tr>
    <th>Name</th>
    <th>Link</th>
    <th>Image</th>
    <th>Description</th>
  </tr>
  <% for app in @apps %>
    <tr>
      <td><%= app.name %></td>
      <td><%= app.link %></td>
      <td><%= app.image %></td>
      <td><%= app.description %></td>
      <td><%= link_to "Show", app %></td>
      <td><%= link_to "Edit", edit_app_path(app) %></td>
      <td><%= link_to "Destroy", app, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New App", new_app_path %></p>
