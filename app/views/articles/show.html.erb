<% title "Article" %>

<p>
  <strong>Date:</strong>
  <%= @article.date %>
</p>
<p>
  <strong>Issue:</strong>
  <%= @article.issue %>
</p>
<p>
  <strong>Volume:</strong>
  <%= @article.volume %>
</p>
<p>
  <strong>Link:</strong>
  <%= @article.link %>
</p>
<p>
  <strong>Image:</strong>
  <%= @article.image %>
</p>
