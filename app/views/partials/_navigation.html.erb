<% 
nav_items = %w( home about apps articles contact )
nav_paths = { 
  'home' => home_path,
  'about' => about_path,
  'apps' => apps_path,
  'articles' => articles_path,
  'contact' => contact_path
}
%>    
    <ul id = "nav">
<% nav_items.each do |item| %>
      <%= content_tag :li, 
            link_to (item, nav_paths[item]), 
            :id => item,
            :class => (@title.downcase == item)? 'current' : ''
       %>
<% end %>
    </ul>
