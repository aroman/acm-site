<!-- authentication module -->
<div id="auth"<%= raw(" class=\"form\"") if !logged_in? %>>
<% if logged_in? %>
  <ul class="nav container">
    <li style="color:#0182ac; margin-right:1em">
      <%= "Welcome, #{current_member.andrew_id} 
      (#{current_member.first_name} #{current_member.last_name})" %>
    </li>
    <li><%= link_to('Members', members_path) %></li>
    <li><%= link_to('Edit Account', edit_member_path(current_member)) %></li>
    <li><%= link_to('Logout', logout_path) %></li>
  </ul>
  <% else %>
  <!-- login form goes here -->
  <%= form_tag sessions_path, :class => 'container' do %>
    <!--<%= label_tag :login, "Andrew ID" %>-->
    <%= text_field_tag :login, params[:login], :placeholder => 'Andrew ID' %>
    <!--<%= label_tag :password %>-->
    <%= password_field_tag :password, value = 'Password' %>
    <%= submit_tag "Log in" %>
  <% end %>  
<% end %>
</div>
